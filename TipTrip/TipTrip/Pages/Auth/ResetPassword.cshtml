@page
@model TipTrip.Pages.Auth.ResetPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Reset Password - TipTrip</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Reset Password</h2>
        <form method="post">
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label>New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary mt-2">Reset Password</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="text-success">@Model.Message</p>
        }
    </div>
</body>
</html>
