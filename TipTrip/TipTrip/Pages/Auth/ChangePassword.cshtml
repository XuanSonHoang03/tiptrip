@page
@model TipTrip.Pages.Auth.ChangePasswordModel
@{
    Layout = "_Layout";
}

<h2>Change Password</h2>

<form method="post">
    <div class="form-group">
        <label for="OldPassword">Old Password</label>
        <input asp-for="ChangePasswordData.OldPassword" type="password" class="form-control" id="OldPassword" required />
    </div>
    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input asp-for="ChangePasswordData.NewPassword" type="password" class="form-control" id="NewPassword" required />
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm New Password</label>
        <input asp-for="ChangePasswordData.ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" required />
    </div>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info">@Model.Message</div>
    }
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>
