@page
@model TipTrip.Pages.Auth.ForgotPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Forgot Password - TipTrip</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Forgot Password</h2>
        <form method="post">
            <div class="form-group">
                <label>Email Address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
            </div>
            <button type="submit" class="btn btn-primary mt-2">Send Reset Link</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="text-success">@Model.Message</p>
        }
    </div>
</body>
</html>
